<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gui.PlayManuallyActivity">

    <ToggleButton
        android:id="@+id/toggleWallsButton"
        android:layout_width="112dp"
        android:layout_height="52dp"
        android:textOff="@string/walls_off"
        android:textOn="@string/walls_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toEndOf="@+id/toggleSolutionButton"
        app:layout_constraintTop_toTopOf="@+id/toggleSolutionButton" />

    <ToggleButton
        android:id="@+id/toggleMapButton_manual"
        android:layout_width="112dp"
        android:layout_height="52dp"
        android:textOff="@string/map_off"
        android:textOn="@string/map_on"
        app:layout_constraintEnd_toStartOf="@+id/toggleSolutionButton"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toggleSolutionButton" />

    <ToggleButton
        android:id="@+id/toggleSolutionButton"
        android:layout_width="112dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:textOff="@string/solution_off"
        android:textOn="@string/solution_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SeekBar
        android:id="@+id/zoomSeekBar_manual"
        android:layout_width="287dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:max="100"
        android:min="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/zoom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleSolutionButton" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="33dp"
        android:layout_height="37dp"
        android:layout_marginTop="92dp"
        android:text="+"
        android:textAlignment="viewStart"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toEndOf="@+id/zoomSeekBar_manual"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_marginTop="80dp"
        android:text="-"
        android:textAlignment="viewEnd"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/zoomSeekBar_manual"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/forwardButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="120dp"
        android:minHeight="48dp"
        android:onClick="forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mazePanel"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_group_collapse_00"
        app:tint="#000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/rightButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="60dp"
        android:minWidth="48dp"
        android:onClick="right"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forwardButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_group_collapse_00"
        app:tint="#000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/leftButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="108dp"
        android:layout_marginBottom="60dp"
        android:minWidth="48dp"
        android:onClick="left"
        android:rotation="-90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forwardButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_group_collapse_00"
        app:tint="#000000"
        tools:ignore="SpeakableTextPresentCheck" />

    <edu.wm.cs.cs301.isabellawu.gui.MazePanel
        android:id="@+id/mazePanel"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zoomSeekBar_manual" />

</androidx.constraintlayout.widget.ConstraintLayout>